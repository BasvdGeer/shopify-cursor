{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
    width: 100%;
  }

  .full-width-bar__container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center; /* Center everything */
    align-items: center;
    max-width: {{ section.settings.content_width }}px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
  }

  .full-width-bar__paper {
    background-color: {{ section.settings.paper_color }};
    padding: 30px 40px;
    transform: rotate(-1deg);
    box-shadow: 3px 3px 0px rgba(0,0,0,0.15); /* Hard shadow for pop */
    border: 1px solid rgba(0,0,0,0.05);
    max-width: 800px;
    margin: 10px auto;
    text-align: center;
    border-radius: 2px;
    position: relative; /* For tape effect */
  }

  .full-width-bar__item {
    text-align: {{ section.settings.text_alignment }};
    /* Removed flex growth to keep it paper-sized */
  }

  .full-width-bar__heading {
    font-family: var(--font-heading-family);
    font-size: {{ section.settings.heading_size }}px;
    font-weight: 700;
    color: {{ section.settings.text_color }};
    margin: 0;
    line-height: 1.1;
    text-transform: uppercase; /* Cool factor */
    letter-spacing: 1px;
  }

  /* Add tape effect? */
  .full-width-bar__paper::before {
    content: '';
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 20px;
    background-color: rgba(255,255,255,0.4);
    box-shadow: 0 1px 2px rgba(0,0,0,0.1);
    border: 1px solid rgba(255,255,255,0.2);
  }

  .full-width-bar__text {
    font-family: var(--font-body-family);
    font-size: {{ section.settings.text_size }}px;
    color: {{ section.settings.text_color }};
    margin: 15px 0 0 0;
    line-height: 1.5;
  }

  /* Create the separation line if requested - simpler to just use space first */

  @media screen and (max-width: 750px) {
    .full-width-bar__container {
      /* flex-direction: column; */
      /* text-align: center; */
      /* gap: 30px; */
    }
    .full-width-bar__paper {
        padding: 20px;
        transform: rotate(-1deg); /* Keep tilt on mobile? */
        width: 100%;
        background-color: {{ section.settings.paper_color }};
    }
    /* .full-width-bar__heading {
        font-size: calc({{ section.settings.heading_size }}px * 0.8);
    } */
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding">
  <div class="full-width-bar__container">
    <div class="full-width-bar__paper">
      {%- if section.settings.main_heading != blank -%}
        <div class="full-width-bar__item">
          <h2 class="full-width-bar__heading">{{ section.settings.main_heading }}</h2>
          {%- if section.settings.description != blank -%}
            <div class="full-width-bar__text rte">{{ section.settings.description }}</div>
          {%- endif -%}
        </div>
      {%- endif -%}

      {%- for block in section.blocks -%}
        <div class="full-width-bar__item" {{ block.shopify_attributes }}>
          {%- if block.settings.title != blank -%}
            <h3 class="full-width-bar__heading">{{ block.settings.title }}</h3>
          {%- endif -%}
          {%- if block.settings.text != blank -%}
            <p class="full-width-bar__text">{{ block.settings.text }}</p>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Full Width Bar",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "main_heading",
      "label": "Main Heading (Optional)",
      "info": "Appears on the left side, larger."
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Add a description here.</p>"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#C4B5FD"
    },
    {
      "type": "color",
      "id": "paper_color",
      "label": "Paper/Note Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "content_width",
      "min": 800,
      "max": 1600,
      "step": 40,
      "unit": "px",
      "label": "Content Width",
      "default": 1200
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 16,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Heading Size",
      "default": 40
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 10,
      "max": 30,
      "step": 1,
      "unit": "px",
      "label": "Text Size",
      "default": 16
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment (Blocks)",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 60
    }
  ],
  "blocks": [
    {
      "type": "stat",
      "name": "Stat / Text",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Heading"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Description",
          "default": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Full Width Bar",
      "blocks": [
        {
          "type": "stat",
          "settings": {
            "title": "$3B+",
            "text": "processed Sales"
          }
        },
        {
          "type": "stat",
          "settings": {
            "title": "50k+",
            "text": "Product sold"
          }
        }
      ]
    }
  ]
}
{% endschema %}
